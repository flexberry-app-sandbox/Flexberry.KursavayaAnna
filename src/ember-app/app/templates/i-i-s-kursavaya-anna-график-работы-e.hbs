<h3 class="ui header">{{t "forms.i-i-s-kursavaya-anna-график-работы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.числоЧасов
      class=(if (v-get validationModel "числоЧасов" "isInvalid") "error")
      label=(t "forms.i-i-s-kursavaya-anna-график-работы-e.числоЧасов-caption")
      data-test-i-i-s-kursavaya-anna-график-работы-e-числоЧасов=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "числоЧасов" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursavaya-anna-график-работы-e.времяНачала-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.времяНачала
      class=(if (v-get validationModel "времяНачала" "isInvalid") "error")
      data-test-i-i-s-kursavaya-anna-график-работы-e-времяНачала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяНачала" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursavaya-anna-график-работы-e.времяКонца-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.времяКонца
      class=(if (v-get validationModel "времяКонца" "isInvalid") "error")
      data-test-i-i-s-kursavaya-anna-график-работы-e-времяКонца=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяКонца" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kursavaya-anna-график-работы-e-типЗанятости="true">
    <label>{{t "forms.i-i-s-kursavaya-anna-график-работы-e.типЗанятости-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kursavaya-anna-тип-занятости")
      value=model.типЗанятости
      class=(if (v-get validationModel "типЗанятости" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "типЗанятости" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursavaya-anna-график-работы-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-kursavaya-anna-график-работы-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
</form>
