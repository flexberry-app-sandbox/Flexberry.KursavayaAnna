<h3 class="ui header">{{t "forms.i-i-s-kursavaya-anna-отсутствие-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursavaya-anna-отсутствие-e.датаНачала-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаНачала
      class=(if (v-get validationModel "датаНачала" "isInvalid") "error")
      data-test-i-i-s-kursavaya-anna-отсутствие-e-датаНачала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаНачала" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursavaya-anna-отсутствие-e.датаКонца-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаКонца
      class=(if (v-get validationModel "датаКонца" "isInvalid") "error")
      data-test-i-i-s-kursavaya-anna-отсутствие-e-датаКонца=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаКонца" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kursavaya-anna-отсутствие-e-причина="true">
    <label>{{t "forms.i-i-s-kursavaya-anna-отсутствие-e.причина-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kursavaya-anna-тип-занятости")
      value=model.причина
      class=(if (v-get validationModel "причина" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "причина" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.комментарий
      class=(if (v-get validationModel "комментарий" "isInvalid") "error")
      label=(t "forms.i-i-s-kursavaya-anna-отсутствие-e.комментарий-caption")
      data-test-i-i-s-kursavaya-anna-отсутствие-e-комментарий=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "комментарий" "message")}}
  </div>
</form>
